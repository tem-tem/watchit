var poster_path = "<%= j @movie.poster_path %>"
var poster_780 = "https://image.tmdb.org/t/p/w780" + poster_path;

$("#movie-details-holder")
  .html("<%= j render @movie %>");

open_modal = $("#movie-details-holder");

open_modal.show(function() {

    open_modal.animate({
      opacity: 1
    }, 100, function() {
      $("body").css({
        overflow: "hidden"
      });
    });

    $("#movie-details").animate({
      top: "50%"
    }, 300, function() {
      open_modal.css({
        overflow: "auto"
      });
      if (poster_path) {
        $("#poster-holder")
        .prepend($('<img>',{id: "poster", src: poster_780, class:"img-responsive"}));
      }

      $('.movie-grid').masonry();
    });
});
